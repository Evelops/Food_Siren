<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="FoodSiren.view.activity.RecipeInfoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/RecipeInfoActivity_tb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_for_tb_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="레시피 상세정보"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="100dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/RecipeInfoActivity_iv_recipe_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#1903A9F4"
        android:columnCount="2"
        android:padding="3dp"
        android:rowCount="20">

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="#772196F3"
            android:gravity="center"
            android:text="이름"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_recipe_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="5"
            android:layout_margin="3dp"
            android:background="#3203A9F4"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="#772196F3"
            android:gravity="center"
            android:text="종류"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_recipe_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="5"
            android:layout_margin="3dp"
            android:background="#3203A9F4"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_method"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="#772196F3"
            android:gravity="center"
            android:text="방식"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_recipe_method"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="5"
            android:layout_margin="3dp"
            android:background="#3203A9F4"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_ingredients"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="#772196F3"
            android:gravity="center"
            android:text="재료"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_recipe_ingredients"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="3"
            android:layout_columnWeight="5"
            android:layout_margin="3dp"
            android:background="#3203A9F4"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_manual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="10"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="#772196F3"
            android:gravity="center"
            android:text="조리 과정"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecipeInfoActivity_tv_recipe_manual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="10"
            android:layout_columnWeight="5"
            android:layout_margin="3dp"
            android:background="#3203A9F4"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textStyle="bold" />

    </GridLayout>

</LinearLayout>